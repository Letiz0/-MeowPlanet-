@model MeowPlanet.ViewModels.MemberInfo.CatDetailViewModel

@{
    string sex = Model.Sex == true ? "喵弟弟" : "喵妹妹";
    string Adoptable = Model.IsAdoptable == true ? "可被領養" : "專屬貓咪";
    string Sitting = Model.IsSitting == true ? "被照顧中" : "非照顧中";
    string Missing = Model.IsMissing == true ? "走失中" : "無走失";
}
<div class="row">
    <div class="col-1"></div>
    <div class="col-4">
        <div class="my-3">
            <p>名稱</p>
            <input type="text" value="@Model.Name" />
        </div>
        <div class="my-3">
            <p>品種</p>
            <input type="text" value="@Model.Breed" />
        </div>
        <div class="my-3">
            <p>性別</p>
            @*<input type="text" value="@sex" />*@
            <div class="d-flex justify-content-between">
                <button type="button" class="btn btn-light mem-btn" value="true" id="sex1">喵弟弟</button>
                <button type="button" class="btn btn-light mem-btn" value="False" id="sex1">喵妹妹</button>
            </div>
        </div>
        <div class="my-3">
            <p>年齡</p>
            <input type="text" value="@Model.Age 歲" />
        </div>
        <div class="my-3">
            <p>所在地</p>
            <input type="text" value="@Model.City" />
        </div>
        <div class="my-3">
            <p>介紹</p>
            <textarea rows="4" type="text">@Model.Introduce</textarea>
        </div>
        <div class="my-3">
            <p>可否領養</p>
            <input type="text" value="@Adoptable" />
        </div>
        <div class="my-3">
            <p>保姆狀態</p>
            <input type="text" value="@Sitting" />
        </div>
        <div class="my-3">
            <p>是否走失</p>
            <input type="text" value="@Missing" />
        </div>
    </div>
    <div class="col-1"></div>
    <div class="col-6">


        <div class="text-center" style="margin:16px;">
            <img src="@Model.Img01" style="width:250px;height:180px;border-radius:30px;" id="imgPreview1">
            <input id="imgInput1" type="file" class="d-none" />
        </div>


        <div class="d-flex justify-content-center" style="margin:10px;">

            <div>
                <img src="@Model.Img02" style="width:180px;height:140px;border-radius:30px;margin:10px;" id="imgPreview2">
                <input id="imgInput2" type="file" class="d-none" />
            </div>
            <div>
                <img src="@Model.Img03" style="width:180px;height:140px;border-radius:30px;margin:10px;" id="imgPreview3">
                <input id="imgInput3" type="file" class="d-none" />
            </div>

        </div>

        <div class="d-flex justify-content-center" style="margin:10px;">

            <div>
                <img src="@Model.Img04" style="width:180px;height:140px;border-radius:30px;margin:10px;" id="imgPreview4">
                <input id="imgInput4" type="file" class="d-none" />
