@model MeowPlanet.ViewModels.MemberInfo.CatDetailViewModel

@{
    string sex = Model.Sex == true ? "喵弟弟" : "喵妹妹";
    string Adoptable = Model.IsAdoptable == true ? "可被領養" : "專屬貓咪";
    string Sitting = Model.IsSitting == true ? "被照顧中" : "非照顧中";
    string Missing = Model.IsMissing == true ? "走失中" : "無走失";
}
<div class="row">
    <div class="col-6">
        <div class="my-3">
            <p>名稱</p>
            <input type="text" value="@Model.Name" />
        </div>
        <div class="my-3">
            <p>品種</p>
            <input type="text" value="@Model.Breed" />
        </div>
        <div class="my-3">
            <p>性別</p>
            <input type="text" value="@sex" />
        </div>
        <div class="my-3">
            <p>年齡</p>
            <input type="text" value="@Model.Age" />
        </div>
        <div class="my-3">
            <p>所在地</p>
            <input type="text" value="@Model.City" />
        </div>
        <div class="my-3">
            <p>介紹</p>
            <textarea rows="4" type="text">@Model.Introduce</textarea>
        </div>
        <div class="my-3">
            <p>可否領養</p>
            <input type="text" value="@Adoptable" />
        </div>
        <div class="my-3">
            <p>保姆狀態</p>
            <input type="text" value="@Sitting" />
        </div>
        <div class="my-3">
            <p>是否走失</p>
            <input type="text" value="@Missing" />
        </div>
    </div>
    <div class="col-6">
        <div class="text-center">
