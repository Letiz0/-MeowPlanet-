@model MeowPlanet.ViewModels.MemberInfo.CatDetailViewModel

@{
    string sex = Model.Sex == true ? "男生" : "女生";
}
<div class="row">
    <div class="col-6">
        <div class="text-center">
            <img src="@Model.Img01" style="width:230px;height:190px;border-radius:30px;">
            <img src="@Model.Img02" style="width:180px;height:140px;border-radius:30px;">
            <img src="@Model.Img03" style="width:180px;height:140px;border-radius:30px;">
            <img src="@Model.Img04" style="width:180px;height:140px;border-radius:30px;">
            <img src="@Model.Img05" style="width:180px;height:140px;border-radius:30px;">
        </div>
    </div>
    <div class="col-5">
        <div class="my-3">
            <p>名稱</p>
            <input type="text" value="@Model.Name" />
        </div>
        <div class="my-3">
            <p>性別</p>
            <input type="text" value="@sex" />
        </div>
        <div class="my-3">
            <p>年齡</p>
            <input type="text" value="@Model.Age" />
        </div>
        <div class="my-3">
            <p>介紹</p>
            <textarea type="text">@Model.Introduce</textarea>
        </div>
    </div>
</div>




