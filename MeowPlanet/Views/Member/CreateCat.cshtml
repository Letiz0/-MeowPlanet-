                            <img id="dropImg5" class="dropImg" />
                            <p id="plus5">+</p>
                            <input asp-for="Img05" type="file" style="opacity: 0.0; position: absolute; top:0; left: 0; bottom: 0; right:0; width: 100%; height:100%;" id="theFile5" />
                        </div>
                    </div>

                    <button type="button" class="btn btn-dark re-b" id="f7-b1">返回</button>
                    <button type="submit" class="btn btn-light ct-b" id="f7-b2">完成</button>
                </div>
            </form>
        </div>


    </div>
</div>

