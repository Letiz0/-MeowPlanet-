                    <div class="d-flex align-items-center justify-content-center">
                        <div id="dropZone1" class="dropZone1" style="position: relative;">
                            <img id="dropImg1" class="dropImg" />
                            <p id="plus1">+</p>
                            <input asp-for="Img01" type="file" style="opacity: 0.0; position: absolute; top:0; left: 0; bottom: 0; right:0; width: 100%; height:100%;" id="theFile1" />
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div id="dropZone2" class="dropZone" style="position: relative;">
                            <img id="dropImg2" class="dropImg" />
                            <p id="plus2">+</p>
