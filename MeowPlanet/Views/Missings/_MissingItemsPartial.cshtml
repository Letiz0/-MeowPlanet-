@model IEnumerable<MeowPlanet.ViewModels.Missings.ItemsViewModel>


@foreach (var item in Model)
{
    <div id="missing-@item.MissingId" data-id="@item.MissingId" style="display:none;" class="container-fluid cat-item" onclick="itemClicked(this)" onmouseenter="itemActive(this)" onmouseleave="itemInactive(this)">
        <div class="row mt-2" style="border-bottom: 2px solid white; min-height: 179.5px">
            <div class="col-6 d-flex flex-column " style="justify-content: space-evenly; align-items:stretch">
                <div style="height: 99px; width: 132px">
                    <img src="@item.Image" class="mh-100 mw-100" style="border: 0px solid white; border-radius: 15px" />
                </div>
                <div class="position-relative" style="top: 6.5px">
                    最近線索 :
                    @if (item.UpdateDate.HasValue)
                    {
                        <div class="text-end">@Html.DisplayFor(a => item.UpdateDate)</div>
                    }
                    else
                    {
                        <div class="text-end">暫無線索</div>
                    }
                </div>
            </div>
            <div class="col-6 d-flex flex-column " style="justify-content: space-evenly; align-items:stretch">
                <div>@item.Name</div>
                <div>@item.Breed</div>                
                @if(item.Sex == false)
                {
                    <div>女生</div>
                }
                else
                {
                    <div>男生</div>
                }
                
                @if (item.ClueCount == 0)
                {
                    <div>暫無線索</div>
                }
                else
                {
                    <div>共有 @item.ClueCount 條線索</div>
                }
                <div style="position: relative; top: 1px">
                    走失日期 :
                    <div class="text-end">@Html.DisplayFor(a => item.MissingDate)</div>
                </div>
            </div>
        </div>
    </div>
}
