            @{
                                    <div class="autoplay col-12">
                                    @if(@Model[x].Img01!=null){
                                    <div class="slide-1"><img src="@Url.Content(@Model[x].Img01)"></div>
                }
                                    @if(@Model[x].Img02!=null){
                                    <div class="slide-2"><img src="@Url.Content(@Model[x].Img02)"></div>
                }
                                    @if(@Model[x].Img03!=null){
